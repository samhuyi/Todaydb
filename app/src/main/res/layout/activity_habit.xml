<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorXian">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/menu_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/back_white"/>
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@drawable/linearlayout_shape">
                    <TextView
                        android:id="@+id/tv_today"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="今天"
                        android:textColor="#000000"
                        android:background="@drawable/today_on_shape"
                        android:clickable="true"
                        android:onClick="OnClick"/>
                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="全部"
                        android:textColor="#ffffff"
                        android:clickable="true"
                        android:onClick="OnClick"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/bianji"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/menu_head"
                android:layout_marginTop="10dp"
                android:background="@color/colorXian"/>
            <FrameLayout
                android:id="@+id/framelayout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/menu_head"
                android:layout_marginTop="11dp">
            </FrameLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/addhabit"
            android:clickable="true"
            android:onClick="AddHabit"/>
        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:drawableTop="@mipmap/data"
            android:drawablePadding="5dp"
            android:text="资料"
            android:textColor="#ffffff"
            android:clickable="true"
            android:onClick="GetData"/>
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawableTop="@mipmap/setting"
            android:drawablePadding="5dp"
            android:text="设置"
            android:textColor="#ffffff"
            android:clickable="true"
            android:onClick="setting"/>

    </RelativeLayout>



</RelativeLayout>
